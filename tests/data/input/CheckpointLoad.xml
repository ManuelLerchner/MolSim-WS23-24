<?xml version="1.0"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../input/simulation_schema.xsd">

    <settings>
        <fps>24</fps>
        <video_length>10</video_length>
        <delta_t>0.0014</delta_t>
        <end_time>100.0</end_time>
        <third_dimension>true</third_dimension>
        <particle_container>
            <directsum_container />
        </particle_container>
        <force>LennardJones</force>
        <thermostat>
            <target_temperature>1</target_temperature>
            <max_temperature_change>1</max_temperature_change>
            <application_interval>10000</application_interval>
        </thermostat>
    </settings>

    <particle_source>
        <check_point_loader>
            <file_name>
                ./ChktpExample.chkpt
            </file_name>
        </check_point_loader>
    </particle_source>

</configuration>