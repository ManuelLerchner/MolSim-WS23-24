<?xml version="1.0"?>
<!-- just a sanity check: body collision rewritten to xml -->
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../simulation_schema.xsd">
    <settings>
        <fps>0</fps>
        <video_length>0</video_length>
        <delta_t>0.001</delta_t>
        <end_time>1.0</end_time>
        <third_dimension>true</third_dimension>
        <particle_container>
            <linkedcells_container>
                <domain_size>
                    <x>30</x>
                    <y>30</y>
                    <z>30</z>
                </domain_size>
                <cutoff_radius>10</cutoff_radius>
                <boundary_conditions>
                    <left>Reflective</left>
                    <right>Reflective</right>
                    <bottom>Reflective</bottom>
                    <top>Reflective</top>
                    <back>Reflective</back>
                    <front>Reflective</front>
                </boundary_conditions>
            </linkedcells_container>
        </particle_container>
        <force>LennardJones</force>
    </settings>

    <particle_source>
        <sphere_spawner>
            <center>
                <x> 15.0 </x>
                <y> 15.0 </y>
                <z> 15.0 </z>
            </center>
            <radius>5</radius>
            <grid_spacing>1</grid_spacing>
            <temperature>0.1</temperature>
            <mass>1</mass>
            <velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </velocity>
            <type>1</type>
        </sphere_spawner>

    </particle_source>
</configuration>