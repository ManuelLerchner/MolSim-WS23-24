<?xml version="1.0"?>
<!-- just a sanity check: body collision rewritten to xml -->
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../simulation_schema.xsd">

    <settings>
        <delta_t>0.0005</delta_t>
        <end_time>100.0</end_time>
        <third_dimension>true</third_dimension>
        <particle_container>
            <linkedcells_container>
                <domain_size>
                    <x>60</x>
                    <y>60</y>
                    <z>60</z>
                </domain_size>
                <cutoff_radius>3.6</cutoff_radius>
                <boundary_conditions>
                    <left>Periodic</left>
                    <right>Periodic</right>
                    <bottom>Reflective</bottom>
                    <top>Reflective</top>
                    <back>Periodic</back>
                    <front>Periodic</front>
                </boundary_conditions>
            </linkedcells_container>
        </particle_container>
        <forces>
            <LennardJones />
            <GlobalDownwardsGravity g="12.44" />
        </forces>
        <interceptors>
            <Thermostat application_interval="1000" target_temperature="40"
                max_temperature_change="INF"
                type="absolute" />
            <FrameWriter output_format="chkpt" fps="40" video_length_s="1" />
            <FrameWriter output_format="vtu" fps="24" video_length_s="30" />
            <ParticleUpdatesPerSecond />
        </interceptors>
    </settings>


    <particle_source>
        <check_point_loader path="../../build/project/output/fluid_mixing_3d/MD_CHKPT_5000.chkpt" />
    </particle_source>

</configuration>